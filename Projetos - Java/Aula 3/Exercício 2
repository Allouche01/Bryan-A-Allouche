public class Exercicio_2 {
    public static void main(String args[]) {

        float l, a, p;

        l = Float.parseFloat(JOptionPane.showInputDialog(null,
                "Qual a largura da caixa ? ",
                "Dado",
                JOptionPane.INFORMATION_MESSAGE));
        a = Float.parseFloat(JOptionPane.showInputDialog(null,
                "Qual a altura da caixa ? ",
                "Dado",
                JOptionPane.INFORMATION_MESSAGE));
        p = Float.parseFloat(JOptionPane.showInputDialog(null,
                "Qual a profundidade da caixa ? ",
                "Dado",
                JOptionPane.INFORMATION_MESSAGE));

        JOptionPane.showMessageDialog(null,
                "Qual a profundidade da caixa ? " + conta(l, a, p),
                "Dado",
                JOptionPane.INFORMATION_MESSAGE);
    }

    static float conta(float la, float aa, float pa) {
        float conta;
        conta = la * aa * pa;
        return conta;
    }
}
