public class Exemplo_2 {

    public static void main(String arg[]) {

        float n1, n2, soma;

        n1 = Float.parseFloat(JOptionPane.showInputDialog(null,
                " Digite um número: ",
                " Dado ",
                JOptionPane.QUESTION_MESSAGE));
        n2 = Float.parseFloat(JOptionPane.showInputDialog(null,
                " Digite outro número: ",
                " Dado ",
                JOptionPane.QUESTION_MESSAGE));

        soma = n1 + n2;
        
        if (soma > 10) {
            JOptionPane.showMessageDialog(null,
                    "O resultado é maior que 10",
                    " INFO ",
                    JOptionPane.INFORMATION_MESSAGE);
        } else if (soma < 10) {
            JOptionPane.showMessageDialog(null,
                    "O resultado é menor que 10",
                    "INFO",
                    JOptionPane.INFORMATION_MESSAGE);
        }
    }
}
