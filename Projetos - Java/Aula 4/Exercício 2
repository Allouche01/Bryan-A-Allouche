public class Exercicio_2 {

    public static void main(String arg[]) {

        int km, tempo, velocidade;

        km = (int) Float.parseFloat(JOptionPane.showInputDialog(null,
                " Quantas KM/H você percorreu ? ",
                " Dado ",
                JOptionPane.QUESTION_MESSAGE));
        tempo = (int) Float.parseFloat(JOptionPane.showInputDialog(null,
                " Em quanto tempo ? ",
                " Dado ",
                JOptionPane.QUESTION_MESSAGE));

        velocidade = km / tempo;

        if (km <= 0 && tempo <= 0) {
            JOptionPane.showMessageDialog(null,
                    " INFORMAÇÕES ERRADAS ",
                    " INFO ",
                    JOptionPane.INFORMATION_MESSAGE);
        } else if (km >= 1 && tempo >= 1) {
            JOptionPane.showMessageDialog(null,
                    "A velocidade media é igual a: " + velocidade,
                    " INFO ",
                    JOptionPane.INFORMATION_MESSAGE);
        }
    }
}
