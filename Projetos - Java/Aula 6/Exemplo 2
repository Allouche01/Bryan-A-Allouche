public class Exemplo_2 {

    public static void main(String args[]) {

        float nota1, nota2, media;

        int contador = 0;

        while (contador < 2) {

            nota1 = solicitaNumero("Digite a nota A1 do aluno " + (contador + 1));
            nota2 = solicitaNumero("Digite a nota A2 do aluno " + (contador + 1));

            media = (nota1 + nota2) / 2;
            exibirResultado("A média é do aluno " + (contador + 1) + " é = " + media);

            contador++;
        }
    }

    static float solicitaNumero(String msg) {
        return Float.parseFloat(JOptionPane.showInputDialog(null,
                msg,
                "Entrada de dados",
                JOptionPane.WARNING_MESSAGE));
    }

    static void exibirResultado(String nome) {
        JOptionPane.showMessageDialog(null,
                nome,
                "Cálculo da Média",
                JOptionPane.WARNING_MESSAGE);
    }
}
